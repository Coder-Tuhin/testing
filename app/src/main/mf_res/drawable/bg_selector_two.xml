<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape android:color="@color/white" android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/ventura_color"></stroke>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_activated="false">
        <shape android:color="@color/ventura_color" android:shape="rectangle">
            <solid android:color="@color/ventura_color"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>