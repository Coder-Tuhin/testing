<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    tools:context=".activities.homescreen.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_12"
        android:orientation="vertical">
        <view.TvRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header"
            android:padding="@dimen/dimen_10"
            android:text="Quick Transact"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120"
            android:layout_marginTop="@dimen/dimen_10">
            <FrameLayout
                android:id="@+id/purchase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="OnClick">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:src="@drawable/qt_purchase"
                    android:layout_marginBottom="@dimen/dimen_6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:text="@string/Purchase"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/sip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="OnClick">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:src="@drawable/qt_sip"
                    android:layout_marginBottom="@dimen/dimen_6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:text="@string/Sip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120"
            android:layout_marginTop="@dimen/dimen_10">
            <FrameLayout
                android:id="@+id/topup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="OnClick">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:src="@drawable/qt_topup"
                    android:layout_marginBottom="@dimen/dimen_6"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:text="@string/Top_up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/parkEarn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="OnClick">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:src="@drawable/qt_park"
                    android:layout_marginBottom="@dimen/dimen_6"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:text="@string/Park_earn"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/redeem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                tools:ignore="OnClick">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:src="@drawable/qt_redeem"
                    android:layout_marginBottom="@dimen/dimen_6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:text="@string/Redeem"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120"
            android:layout_marginTop="@dimen/dimen_10">

            <FrameLayout
                android:id="@+id/switchTransaction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                tools:ignore="OnClick">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:src="@drawable/qt_switch"
                    android:layout_marginBottom="@dimen/dimen_6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:text="@string/Switch"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120"
            android:layout_marginTop="@dimen/dimen_10"
            android:visibility="gone">
            <FrameLayout
                android:id="@+id/stp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/header"
                tools:ignore="OnClick">
                <ImageView
                    android:layout_width="@dimen/dimen_48"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:scaleType="fitXY"
                    android:src="@drawable/stp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:text="@string/Stp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/swp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_marginRight="@dimen/dimen_6"
                android:background="@color/header"
                tools:ignore="OnClick">
                <ImageView
                    android:layout_width="@dimen/dimen_48"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:scaleType="fitXY"
                    android:src="@drawable/swp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:text="@string/Swp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/spread"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_marginRight="@dimen/dimen_6"
                android:background="@color/header"
                tools:ignore="OnClick">
                <ImageView
                    android:layout_width="@dimen/dimen_48"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:contentDescription="@string/DEFAULT_DESCRIPTION"
                    android:scaleType="fitXY"
                    android:src="@drawable/spread_order" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/dimen_6"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:text="@string/Spread_order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>