<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:layout_marginBottom="@dimen/dimen_4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:gravity="center"
            android:orientation="vertical">

            <view.TvRegular
                android:id="@+id/schemeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aditya Birla tax Relief"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_14" />

            <view.TvRegular
                android:id="@+id/nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="44.2112"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <include layout="@layout/custom_spinner"
            android:id="@+id/sipDaySpinner"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <view.TvRegular
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20000"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_14" />

            <view.TvRegular
                android:id="@+id/alloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.4">

            <view.TvRegular
                android:id="@+id/oneyr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1.2"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_14" />

            <view.TvRegular
                android:id="@+id/threeyr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10.6"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_14" />

            <view.TvRegular
                android:id="@+id/fiveyr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="15.6"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/actionIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/flip"
                android:contentDescription="@string/DEFAULT_DESCRIPTION"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/header"/>

</LinearLayout>