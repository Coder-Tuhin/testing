<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginTop="@dimen/dimen_4"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <view.TvRegular
            android:id="@+id/upiid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_36"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_24">
            <ImageView
                android:id="@+id/actionIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:tint="@color/ventura_color"
                android:contentDescription="@string/DEFAULT_DESCRIPTION"
                android:src="@drawable/close" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.6"
        android:layout_marginTop="@dimen/dimen_4"
        android:background="@color/lineseperator"/>
</LinearLayout>