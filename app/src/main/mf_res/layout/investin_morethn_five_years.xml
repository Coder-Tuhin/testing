<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/analytics_background"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_16"
        android:paddingLeft="@dimen/dimen_16">
        <ImageView
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"
            android:src="@drawable/ic_basketof"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Would you prefer"
                android:textColor="@color/ventura_color"
                android:textSize="@dimen/text_18"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="to invest in a basket of ?"
                android:textColor="@color/ventura_color"
                android:textSize="@dimen/text_18"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tv_largecap"
                android:layout_width="290dp"
                android:layout_height="@dimen/dimen_120"
                android:text="Large cap"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/blueship"
                android:paddingBottom="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_16"
                android:paddingLeft="@dimen/dimen_8"/>
            <LinearLayout

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:id="@+id/bluechip_playbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/tv_midcap"
                android:layout_width="290dp"
                android:layout_height="@dimen/dimen_120"
                android:text="Mid Cap"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16"
                android:background="@drawable/emerging"
                android:paddingBottom="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_16"
                android:paddingLeft="@dimen/dimen_8"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:id="@+id/emerging_playbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/tv_smallcap"
                android:layout_width="290dp"
                android:layout_height="@dimen/dimen_120"
                android:layout_gravity="center"
                android:text="Small Cap"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16"
                android:background="@drawable/aggreshive"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:id="@+id/Aggreshive_playbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/play"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/tv_flexicap"
                android:layout_width="290dp"
                android:layout_height="@dimen/dimen_120"
                android:layout_gravity="center"
                android:text="Flexi Cap"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16"
                android:background="@drawable/diversified"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right">
                <ImageView
                    android:id="@+id/flexi__playbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_30"
            android:src="@drawable/play"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Watch the video to know more"
            android:textSize="@dimen/text_11"
            android:textColor="@color/ventura_color"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_10"/>
    </LinearLayout>-->


</LinearLayout>