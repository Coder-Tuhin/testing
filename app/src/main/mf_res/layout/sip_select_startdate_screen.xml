<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center">
        <TextView
            android:id="@+id/SchemeNameTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Axis Blue chip fund"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/ventura_color"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="@dimen/dimen_60"
            android:layout_height="@dimen/dimen_60"
            android:layout_weight="1"
            android:src="@drawable/ic_payday_vw"
            android:layout_marginLeft="@dimen/dimen_30"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a date from options given below for your monthly auto debit "
        android:textColor="@color/silver"
        android:layout_marginTop="@dimen/dimen_20"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A few popular dates"
        android:textColor="@color/ventura_color"
        android:layout_marginTop="@dimen/dimen_20"
        android:textSize="@dimen/text_15"
        android:gravity="left"

        android:layout_marginLeft="@dimen/dimen_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_one"
            android:textColor="@drawable/bg_selectortext_one"
            android:text="1"
            android:textStyle="bold"
            android:textSize="@dimen/text_20"
            android:gravity="center" />
        <View
            android:layout_width="@dimen/dimen_20"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_one"
            android:textColor="@drawable/bg_selectortext_one"
            android:text="5"
            android:textStyle="bold"
            android:textSize="@dimen/text_20"
            android:gravity="center"
            android:padding="@dimen/dimen_4"/>
        <View
            android:layout_width="@dimen/dimen_20"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_10"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_one"
            android:textColor="@drawable/bg_selectortext_one"
            android:text="10"
            android:textStyle="bold"
            android:textSize="@dimen/text_20"
            android:gravity="center"
            android:padding="@dimen/dimen_4"/>
        <View
            android:layout_width="@dimen/dimen_20"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_15"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_one"
            android:textColor="@drawable/bg_selectortext_one"
            android:text="15"
            android:textStyle="bold"
            android:textSize="@dimen/text_20"
            android:gravity="center"
            android:padding="@dimen/dimen_4"/>
        <View
            android:layout_width="@dimen/dimen_20"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_20"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_one"
            android:textColor="@drawable/bg_selectortext_one"
            android:text="20"
            android:textStyle="bold"
            android:textSize="@dimen/text_20"
            android:gravity="center"
            android:padding="@dimen/dimen_4"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40"
        android:gravity="center"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a date that is not \nin the above given option"
            android:textColor="@color/silver"
            android:textSize="@dimen/text_18"/>
        <include layout="@layout/mf_spinner_whitebg"
            android:id="@+id/sipDaySpinner"
            android:layout_width="60dp"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginLeft="@dimen/dimen_20" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="SIP Start date -"
            android:textColor="@color/silver"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="dd-mmm-yyyy"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_50">
        <TextView
            android:id="@+id/nextbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            android:background="@drawable/bg_orange_btn"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_30"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_10"

            />

    </LinearLayout>
</LinearLayout>