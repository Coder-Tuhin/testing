<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/analytics_background"
    android:padding="@dimen/dimen_10">
    <TextView
        android:id="@+id/schemeNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mirae Large Cap"
        android:textColor="@color/ventura_color"
        android:textSize="@dimen/text_14"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_6">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Fund Size"
            android:textColor="@color/report_heading_color"
            android:textSize="@dimen/text_9"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:text="Category"
            android:gravity="center"
            android:textColor="@color/report_heading_color"
            android:textSize="@dimen/text_9"/>

        <LinearLayout
            android:id="@+id/return_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return(%)"
                android:gravity="center"
                android:textColor="@color/report_heading_color"
                android:textSize="@dimen/text_9"/>
            <ImageView
                android:layout_width="@dimen/dimen_8"
                android:layout_height="match_parent"
                android:src="@drawable/filtericon"
                android:layout_marginLeft="@dimen/dimen_4"
                app:tint="@color/white" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:text="Years"
            android:gravity="right"
            android:textColor="@color/report_heading_color"
            android:textSize="@dimen/text_9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_6">
        <TextView
            android:id="@+id/fundSizeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Rs. 5,516 Crs"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7">
            <LinearLayout
                android:id="@+id/cc_low_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/seek_left_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-0.0%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_8"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_8"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cc_high_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/seek_right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="+0.0%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_8"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cc_low_layout"
                android:layout_toLeftOf="@+id/cc_high_layout"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/progress_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10"
                    android:layout_toRightOf="@+id/cc_low_layout"
                    android:layout_toLeftOf="@+id/cc_high_layout"
                    android:layout_centerVertical="true"
                    android:background="@drawable/line_drawable"
                    android:layout_marginTop="@dimen/dimen_6"/>
            </LinearLayout>


        </RelativeLayout>
        <TextView
            android:id="@+id/returnThreeYrsTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+8.5 p.a."
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:text="3"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAV(Rs.): "
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"/>
        <TextView
            android:id="@+id/navValueTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5000.00"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"/>
        <view.TvLarge
            android:id="@+id/lumpsumBtn"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:background="@drawable/mf_button_bg_small"
            android:gravity="center"
            android:text="One Time"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_8"
            android:visibility="visible"/>
        <View
            android:layout_width="@dimen/dimen_2"
            android:layout_height="wrap_content" />
        <view.TvLarge
            android:id="@+id/sipBtn"
            android:layout_width="@dimen/dimen_60"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:background="@drawable/mf_button_bg_small"
            android:gravity="center"
            android:text="Monthly"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_8"
            android:visibility="visible"/>
    </LinearLayout>
    <View
        android:id="@+id/child_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ventura_color"
        android:layout_marginTop="@dimen/dimen_6"/>

</LinearLayout>