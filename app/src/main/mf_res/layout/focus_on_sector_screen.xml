<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/analytics_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus on a Sector/Theme"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which Sector/theme you would like to invest in ?"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="@dimen/dimen_18"
        android:layout_marginTop="@dimen/dimen_40"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dimen_40"
            android:paddingLeft="@dimen/dimen_40"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/ll_pharma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_180"
                    android:src="@drawable/phermaandhealthcare"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_banking"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_180"
                    android:src="@drawable/bankingandfinancial"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_technology"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200"
                    android:src="@drawable/technology"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_infrastructure"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200"
                    android:src="@drawable/infrastructure"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_consumer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200"
                    android:src="@drawable/fmcg"
                    />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</LinearLayout>