<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_6"
        android:paddingLeft="@dimen/dimen_2"
        android:paddingRight="@dimen/dimen_2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">
            <view.TvRegular
                android:id="@+id/schemeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Scheme Name"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/noUnits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:textColor="@color/white"
                android:text="10.0"
                android:textSize="@dimen/text_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <view.TvRegular
                android:id="@+id/costAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/white"
                android:text="1,000"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/currentAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/dimen_2"
                android:textColor="@color/white"
                android:text="1,000"
                android:textSize="@dimen/text_14"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gain_loss_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <view.TvRegular
                android:id="@+id/gainLoss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/white"
                android:text="1,000"
                android:paddingRight="@dimen/dimen_1"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/xirrval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/dimen_2"
                android:textColor="@color/white"
                android:text="10.1"
                android:paddingRight="@dimen/dimen_1"
                android:textSize="@dimen/text_14"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dimen_10"
            android:gravity="center_vertical|right"
            android:visibility="gone">
            <ImageView
                android:id="@+id/actionIV"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:src="@mipmap/actions"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/go_btn"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            >
            <view.TvLarge
                android:id="@+id/item_button"
                android:layout_width="@dimen/dimen_80"
                android:layout_height="34dp"
                android:background="@drawable/mf_button_bg"
                android:gravity="center"
                android:text="SUBMIT"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_12"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineseperator"/>
</LinearLayout>