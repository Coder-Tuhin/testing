<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/custom_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:src="@drawable/img_cross"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <view.TvRegular
        android:id="@+id/otp_authentication_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_16"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">






    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TIL_Otp"
            android:layout_marginTop="@dimen/dimen_16"
            android:theme="@style/TextInputLayoutStyle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="true"
            android:clickable="false"
            android:textColorHint="@color/ventura_color"
            app:boxStrokeColor="@drawable/selector_box_stroke_color"
            app:boxStrokeWidth="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            app:expandedHintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/eye_password"
            app:errorIconDrawable="@null"
            app:passwordToggleTint="@color/white"
            app:errorTextColor="@color/highlight"
            android:hint="Enter OTP">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/rtaotp_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="6"
                android:textColor="@color/white"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <view.TvRegular
            android:id="@+id/otptimertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/dimen_14"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_6"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <View
        android:layout_width="@dimen/dimen_10"
        android:layout_height="@dimen/dimen_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <view.TvLarge
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mf_button_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingTop="@dimen/dimen_6"
            android:paddingRight="@dimen/dimen_24"
            android:paddingBottom="@dimen/dimen_6"
            android:text="Submit"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_15" />
        <View
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_1"/>

        <view.TvLarge
            android:id="@+id/resend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mf_button_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingTop="@dimen/dimen_6"
            android:paddingRight="@dimen/dimen_24"
            android:paddingBottom="@dimen/dimen_6"
            android:text="Resend"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_15" />


    </LinearLayout>

    <View
        android:layout_width="@dimen/dimen_20"
        android:layout_height="@dimen/dimen_20"/>


</LinearLayout>