<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/analytics_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"
            android:src="@drawable/ic_preservecapital"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preserve Capital"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10">
        <ImageView
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:src="@drawable/ic_calendarpc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your time horizon ?"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dimen_10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/dimen_54"
        android:paddingLeft="@dimen/dimen_54"
        android:orientation="vertical"

        android:layout_marginTop="@dimen/dimen_100">
        <LinearLayout
            android:id="@+id/ll_morethanthreeyear"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_white_20dp">
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/bg_imageround_white_1dp">
                <ImageView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:src="@drawable/ic_morethan"></ImageView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="More than 3 Years"
                android:textColor="@color/ventura_color"
                android:textSize="@dimen/dimen_18"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_onetothreeyears"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:gravity="center"
            android:background="@drawable/bg_white_20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bg_imageround_white_1dp">
                <ImageView
                    android:layout_width="@dimen/dimen_36"
                    android:layout_height="@dimen/dimen_36"
                    android:src="@drawable/ic_equal"></ImageView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="1 - 3 Years"
                android:textColor="@color/ventura_color"
                android:textSize="@dimen/dimen_18"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lessthnfive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_30"
            android:background="@drawable/bg_white_20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/bg_imageround_white_1dp">
                <ImageView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:src="@drawable/ic_less_than_vw"></ImageView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="Less than 3 Years"
                android:textColor="@color/ventura_color"
                android:textSize="@dimen/dimen_18"
                android:layout_gravity="center" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>