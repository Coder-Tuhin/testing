<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <view.TvRegular
        android:id="@+id/fromScreenTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header"
        android:padding="@dimen/dimen_4"
        android:text=""
        android:textStyle="italic|bold"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_16" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_2"
        android:background="@color/header">
        <LinearLayout
            android:id="@+id/familySpnLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30">
            <view.TvRegular
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_secondary"
                android:text="Family:"
                android:layout_marginRight="@dimen/dimen_4"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_14"/>

            <include layout="@layout/mf_spinner_round"
                android:id="@+id/mfSpinnerfamily"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <view.TvRegular
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_secondary"
                android:text="Asset Type:"
                android:layout_marginRight="@dimen/dimen_4"
                android:layout_marginLeft="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:textSize="@dimen/text_14"/>

            <include layout="@layout/mf_spinner_round"
                android:id="@+id/mfSpinnerAssetType"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/asOnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:paddingTop="@dimen/dimen_4">
            <view.TvRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:text="@string/AS_on"
                android:layout_marginRight="@dimen/dimen_4"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/asondate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:text=""
                android:textSize="@dimen/text_16"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_6"
        android:paddingLeft="@dimen/dimen_2"
        android:paddingRight="@dimen/dimen_2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical">
            <view.TvRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ventura_color"
                android:text="@string/Scheme"
                android:textSize="@dimen/text_13"/>
            <view.TvRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:textColor="@color/ventura_color"
                android:text="@string/No_of_units"
                android:textSize="@dimen/text_13"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <view.TvRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/Pur_Amt"
                android:textColor="@color/ventura_color"
                android:textSize="@dimen/text_13" />
            <view.TvRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/dimen_2"
                android:textColor="@color/ventura_color"
                android:text="@string/Curr_Amt"
                android:textSize="@dimen/text_13"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gain_loss_layout_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <view.TvRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/ventura_color"
                android:text="@string/Gain_Loss1"
                android:textSize="@dimen/text_13"/>
            <view.TvRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="@dimen/dimen_2"
                android:textStyle="italic"
                android:textColor="@color/ventura_color"
                android:text="@string/Xirr"
                android:textSize="@dimen/text_13"/>
        </LinearLayout>

        <view.TvRegular
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:text=""
            android:paddingLeft="@dimen/dimen_8"
            android:textSize="@dimen/text_13"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:background="@color/header"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <LinearLayout
            android:id="@+id/grand_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_6"
            android:paddingBottom="@dimen/dimen_6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_2"
            android:paddingRight="@dimen/dimen_2"
            android:background="@color/header">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">
                <view.TvRegular
                    android:id="@+id/schemeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/Grand_Total"
                    android:textSize="@dimen/text_15"/>
                <view.TvRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <view.TvRegular
                    android:id="@+id/totcostAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/text_15"/>
                <view.TvRegular
                    android:id="@+id/totcurrentAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textColor="@color/white"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/text_15"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <view.TvRegular
                    android:id="@+id/totgainLoss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/green1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="@dimen/text_15"/>
                <view.TvRegular
                    android:id="@+id/totxirr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textColor="@color/white"
                    android:text=""
                    android:textStyle="bold|italic"
                    android:textSize="@dimen/text_15"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_ad_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <view.TvRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/ventura_color"
                android:autoLink="email|phone"
                android:padding="@dimen/dimen_6"
                android:text="@string/dashboard_note"
                android:textSize="@dimen/text_13"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>