<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/holder_linear"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/mf_et_border_gray"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Bank Name"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/bankName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=""
                android:textSize="@dimen/text_14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Account No."
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/accountNo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=""
                android:textSize="@dimen/text_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="SIP Type"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/siptype"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=""
                android:textSize="@dimen/text_14"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Mandate Amount(₹)"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/mandateAmt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:text=""
                android:textSize="@dimen/text_14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Running SIP(₹)"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/runningsip"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=""
                android:textSize="@dimen/text_14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Mandate Status"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/mandateStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=""
                android:textSize="@dimen/text_14"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>