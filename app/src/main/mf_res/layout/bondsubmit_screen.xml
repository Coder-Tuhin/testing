<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <view.TvLarge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Applicant Details"
            android:textColor="@color/ventura_color"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/dimen_20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:id="@+id/pantext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAN : "
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13"/>
            <view.TvRegular
                android:id="@+id/panValue"
                android:layout_toRightOf="@+id/pantext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_15"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <view.TvRegular
                    android:layout_toLeftOf="@id/clientcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Code : "
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15"/>
                <view.TvRegular
                    android:id="@+id/clientcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:id="@+id/dptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DP ID : "
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13"/>
            <view.TvRegular
                android:id="@+id/dptextvalue"
                android:layout_toRightOf="@+id/dptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_15"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <view.TvRegular
                    android:layout_toLeftOf="@id/beni_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beneficiary ID: "
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15"/>
                <view.TvRegular
                    android:id="@+id/beni_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <view.TvLarge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Application Details"
            android:textColor="@color/ventura_color"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/dimen_20"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Tenor : "
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/dimen_14"/>
        <view.TvRegular
            android:id="@+id/tenor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="36M"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Interest Frequency : "
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/dimen_14"/>
        <view.TvRegular
            android:id="@+id/interestfreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Monthly"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Interest Rate(%) : "
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/dimen_14"/>
        <view.TvRegular
            android:id="@+id/interestrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="8.75"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">
            <view.TvRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="No. of Bonds : "
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/dimen_14"/>
            <view.EtRegular
                android:id="@+id/noofBondEditText"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent"
                android:background="@drawable/mf_et_ventura"
                android:gravity="center"
                android:text="8.7"
                android:layout_marginLeft="@dimen/dimen_16"
                android:inputType="number"
                android:maxLength="10"
                android:imeOptions="actionDone"
                android:layout_marginRight="@dimen/dimen_4"
                android:paddingLeft="@dimen/dimen_6"
                android:paddingRight="@dimen/dimen_6"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/spinner_divider"
                android:textSize="@dimen/text_14" >
            </view.EtRegular>
        </LinearLayout>
        <view.TvSmall
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum quantity 10 bonds"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"
            android:layout_marginLeft="@dimen/dimen_100"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Total Amount(Rs.) : "
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10"
            android:textSize="@dimen/dimen_14"/>
        <view.TvRegular
            android:id="@+id/totalamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="10,000"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10">
        <view.TvRegular
            android:id="@+id/upitext"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="UPI ID"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15"/>
        <ImageView
            android:id="@+id/upiimage"
            android:layout_toRightOf="@id/upitext"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_10"
            android:contentDescription="@string/DEFAULT_DESCRIPTION"
            android:src="@mipmap/plus" />
        <include layout="@layout/mf_spinner_round"
            android:id="@+id/mfSpinnerfamily"
            android:layout_width="@dimen/dimen_200"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/dimen_30" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_30"
        android:orientation="vertical">

        <view.TvRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/text_primary"
            android:text="By clicking on submit I hereby accept the "
            android:textColor="@color/text_secondary" />

        <view.TvLarge
            android:id="@+id/termcondclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_conditions"
            android:textColor="@color/colorAccent" />

    </LinearLayout>
    <Button
        android:id="@+id/button_apply"
        android:layout_width="100dp"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/background_border_popup"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_10"/>



</LinearLayout>