<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ventura_color">
    <TextView
        android:id="@+id/closeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="@dimen/text_15"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="right"/>

    <TextView
        android:id="@+id/return_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CAGR (%) Returns"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/return_title"
        android:layout_margin="@dimen/dimen_14"
        android:background="@drawable/border_white"
        android:layout_marginBottom="@dimen/dimen_20">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="1 Year"
                android:textSize="@dimen/text_14"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/ventura_color"/>
            <TextView
                android:id="@+id/return1Y"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="-1.0"
                android:textSize="@dimen/text_14"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="match_parent"
            android:background="@color/ventura_color"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="3 Years"
                android:textSize="@dimen/text_14"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/ventura_color"/>
            <TextView
                android:id="@+id/return2Y"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="-1.0"
                android:textSize="@dimen/text_14"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/dimen_1"
            android:layout_height="match_parent"
            android:background="@color/ventura_color"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="5 Years"
                android:textSize="@dimen/text_14"
                android:textColor="@color/black"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1"
                android:background="@color/ventura_color"/>
            <TextView
                android:id="@+id/return3Y"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="-1.0"
                android:textSize="@dimen/text_14"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>