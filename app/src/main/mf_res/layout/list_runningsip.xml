<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_border"
        android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <view.TvRegular
            android:id="@+id/schemeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Scheme Name"
            android:textSize="@dimen/text_14"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="SIP Amount p.m(₹)"
            android:textSize="@dimen/text_14"/>
        <view.TvRegular
            android:id="@+id/sippm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="2,000"
            android:textSize="@dimen/text_14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Pur.Amt.(₹)"
            android:textSize="@dimen/text_14"/>
        <view.TvRegular
            android:id="@+id/puramt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="2,000"
            android:textSize="@dimen/text_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Curr.Amt.(₹)"
            android:textSize="@dimen/text_14"/>
        <view.TvRegular
            android:id="@+id/curAmt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="2,000"
            android:textSize="@dimen/text_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="End Date"
            android:textSize="@dimen/text_14"/>
        <view.TvRegular
            android:id="@+id/enddate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_marginRight="@dimen/dimen_10"
            android:text="20Feb2018"
            android:textSize="@dimen/text_14"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <view.TvRegular
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Next SIP Due"
                android:textSize="@dimen/text_14"/>
            <view.TvRegular
                android:id="@+id/sip_next_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:text="20Feb2018"
                android:textSize="@dimen/text_14"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>