<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/custom_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:src="@drawable/img_cross"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <view.TvRegular
        android:id="@+id/mandatetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_4"
        android:gravity="center_horizontal"
        android:text="Your Mandate for given date is exhausted. Please select any one option"
        android:textStyle="italic|bold"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_20"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/createmandate_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:background="@drawable/rounded_boarder_ventura"
            android:text="CREATE MANDATE"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/select_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_10"
            android:background="@drawable/rounded_boarder_ventura"
            android:text="SELECT DATE"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>




</LinearLayout>