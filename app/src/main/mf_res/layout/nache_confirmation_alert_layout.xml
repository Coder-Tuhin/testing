<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ventura_image"
            android:layout_width="@dimen/dimen_36"
            android:layout_height="@dimen/dimen_36"
            android:src="@drawable/ventura_icon"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_toRightOf="@id/ventura_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18"
            android:text="@string/terms_conditions"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dimen_10"
            android:textStyle="bold"
            android:padding="@dimen/dimen_4"/>

        <TextView
            android:id="@+id/closeAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18"
            android:text="X"
            android:visibility="gone"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:textStyle="bold"
            android:padding="@dimen/dimen_4"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/sip_conf_msg"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:visibility="gone"
        android:padding="@dimen/dimen_10"
        android:textSize="@dimen/text_14"
        android:text="@string/sip_mandate_success_msg"
        android:layout_below="@+id/header_layout"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginTop="@dimen/dimen_60"
        android:id="@+id/enache_process_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/enach_heading"
        android:textStyle="bold"
        android:textSize="@dimen/text_16"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/dimen_10"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enache_process_title"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="@dimen/dimen_10"
                    android:id="@+id/enache_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:text="@string/term"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:id="@+id/enache_notes2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term1"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term2"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="1. Eligibility"
                    android:textSize="@dimen/text_17"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term3"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term4"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term5"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term6"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term7"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term8"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term9"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="2. Undertaking"
                    android:textSize="@dimen/text_17"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term10"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term11"
                    android:textSize="@dimen/text_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/dimen_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dimen_20"
                        android:paddingRight="@dimen/dimen_20"
                        android:text="3. "
                        android:textSize="@dimen/dimen_18"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:paddingLeft="@dimen/dimen_20"
                        android:paddingRight="@dimen/dimen_20"
                        android:text="@string/term12"
                        android:textSize="@dimen/text_14"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="4. Communication from Ventura Securities Limited"
                    android:textSize="@dimen/text_17"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="I hereby agree that Ventura  may in its discretion send any document that is obligatory to be sent to the applicant, by means of an electronic communication, with the possible exception of graphic insertions such as photographs or logotypes. This electronic communication may be in the form of e-mail, an e-mail attachment or in the form of download or display or otherwise available on www.ventura1.com.Every document so sent shall contain all such information as is mandated by the concerned statutory and/or regulatory authority. Ventura  would be deemed to have fulfilled its legal obligation to deliver a document to the applicant, if it is sent by the electronic mode.In case of non receipt of  NPCI message Ventura is not  responsible.Ventura is not responsible for email going in spam. Orders can also be placed from Ventura's website, mobile applications, dealers, branches, emails  or text. However,your order is valid only if you  have  blocked the funds. "
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="6. Force Majeure"
                    android:textSize="@dimen/text_17"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term14"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="7. Indemnity"
                    android:textSize="@dimen/text_17"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dimen_20"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="@string/term15"
                    android:textSize="@dimen/text_14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dimen_10"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dimen_20"
                        android:paddingRight="@dimen/dimen_20"

                        android:text="8. "
                        android:textSize="@dimen/dimen_18"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="@dimen/dimen_20"
                        android:textColor="@color/black"
                        android:paddingRight="@dimen/dimen_20"
                        android:text="@string/term15"
                        android:textSize="@dimen/text_14"
                        android:layout_marginBottom="@dimen/dimen_100"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:text="OK"
            android:textSize="@dimen/text_16"
            android:textColor="@color/ventura_color"
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/dimen_30"
            />

    </LinearLayout>







</RelativeLayout>