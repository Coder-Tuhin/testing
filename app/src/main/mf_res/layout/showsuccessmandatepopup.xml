<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/invest_border_black">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/correct"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"/>



    <view.TvRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_18"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dimen_6"
        android:layout_marginRight="@dimen/dimen_6"
        android:text="@string/mandateCreateText"
        android:gravity="center"/>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_36"
        android:layout_marginTop="@dimen/big_margine"
        android:background="@drawable/bg_oange_corner_8dp"
        android:text="OK"
        android:textSize="@dimen/common_textsize"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingStart="@dimen/item_height"
        android:paddingEnd="@dimen/item_height"/>
    <View
        android:layout_width="@dimen/dimen_20"
        android:layout_height="@dimen/dimen_40"/>


</LinearLayout>