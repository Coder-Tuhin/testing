<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="@drawable/popup_border">
    <LinearLayout
        android:layout_width="@dimen/dimen_250"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:gravity="center_vertical"
        android:background="@color/header">
        <view.TvLarge
            android:id="@+id/schemeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Scheme Name"
            android:textColor="@color/ventura_color"
            android:textSize="@dimen/text_14"/>
        <ImageButton
            android:id="@+id/close"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:background="@android:drawable/btn_dialog"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:background="@color/header"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Date"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"/>
        <view.TvRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dividend Amount(\u20B9)"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/firstdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/firstvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/seconddate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/secondvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/thirddate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/thirdvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fourthdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/fourthvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_6"
        android:background="@color/header"
        android:orientation="horizontal">
        <view.TvRegular
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Total"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"/>
        <view.TvRegular
            android:id="@+id/totalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</LinearLayout>