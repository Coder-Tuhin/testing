<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/analytics_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/mf_et_border"
            android:layout_marginLeft="@dimen/dimen_3"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_3">
            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:src="@drawable/ic_search_mf"
                android:layout_alignParentRight="true" />
            <view.EtRegular
                android:id="@+id/scheme_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:background="@null"
                android:hint="Enter Scheme Name"
                android:text=""
                android:cursorVisible="true"
                android:focusedByDefault="true"
                android:focusable="true"
                android:imeOptions="actionDone"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/spinner_divider"
                android:textSize="@dimen/text_14"
                android:paddingLeft="@dimen/dimen_3"
                android:paddingRight="@dimen/dimen_2"
                android:layout_toLeftOf="@+id/search_btn">
                <requestFocus/>
            </view.EtRegular>
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/ShcemeNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scheme Name"
        android:textColor="@color/ventura_color"
        android:layout_marginTop="@dimen/dimen_10"
        android:textSize="@dimen/dimen_20"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What amount you would like to invest?"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_10"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_16"
        android:padding="@dimen/dimen_36">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_10000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_selector_two"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_6"
                android:text="\u20B9 10,000"
                android:textColor="@drawable/bg_selectortext_two"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
            <TextView
                android:id="@+id/tv_20000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="\u20B9 20,000"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:textColor="@drawable/bg_selectortext_two"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_6"
                android:background="@drawable/bg_selector_two"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24">
            <TextView
                android:id="@+id/tv_50000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="\u20B9 50,000"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:textColor="@drawable/bg_selectortext_two"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_6"
                android:background="@drawable/bg_selector_two"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
            <TextView
                android:id="@+id/tv_100000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="\u20B9 1,00,000"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:textColor="@drawable/bg_selectortext_two"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_6"
                android:background="@drawable/bg_selector_two"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:text="Enter Amount (Rs.)"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"/>
            <EditText
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dimen_36"
                android:textStyle="bold"
                android:background="@drawable/bg_white_1dp_orange"
                android:textSize="@dimen/text_18"
                android:inputType="number"
                android:paddingLeft="@dimen/dimen_10"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp">
            <CheckBox
                android:id="@+id/termcondChkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"

                android:checked="false"
                android:textSize="@dimen/text_12"
                android:textColor="@color/white"
                android:text="I/We hereby agree with"/>
            <view.TvLarge
                android:id="@+id/termcondclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_conditions"
                android:textColor="@color/colorAccent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="as well as"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"
                android:layout_marginLeft="@dimen/dimen_4"/>
            <view.TvLarge
                android:id="@+id/cuttofclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cut off timing"
                android:layout_marginLeft="@dimen/dimen_4"
                android:textColor="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for applicability of NAV"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"
                android:layout_marginLeft="@dimen/dimen_4"/>

        </LinearLayout>
        <TextView
            android:id="@+id/invetnowbtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_36"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/bg_oange_corner_8dp"
            android:text="Invest"
            android:gravity="center"
            android:textSize="@dimen/text_20"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingStart="@dimen/item_height"
            android:paddingEnd="@dimen/item_height"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_6"
                android:gravity="bottom">
                <view.TvRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Last_nav"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/spinner_divider"/>
                <view.TvRegular
                    android:id="@+id/navvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_6"
                android:gravity="bottom">
                <view.TvRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Minimum_amt"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/spinner_divider"/>
                <view.TvRegular
                    android:id="@+id/minimum_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_6"
                android:gravity="bottom">
                <view.TvRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Multiples_of"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/spinner_divider"/>
                <view.TvRegular
                    android:id="@+id/multiply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_6"
                android:paddingBottom="@dimen/dimen_6"
                android:gravity="bottom">
                <view.TvRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Exit_load"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/spinner_divider"/>
                <view.TvRegular
                    android:id="@+id/exitloadvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>