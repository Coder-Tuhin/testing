<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_8"
        android:paddingLeft="@dimen/dimen_2"
        android:paddingRight="@dimen/dimen_2"
        android:background="@color/header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <view.TvRegular
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_secondary"
                    android:text="Family:"
                    android:layout_marginRight="@dimen/dimen_4"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_14"/>

                <include layout="@layout/mf_spinner_round"
                    android:id="@+id/mfSpinnerfamily"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RadioGroup
                    android:id="@+id/amountPerRd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:background="@drawable/rd_group_border"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/amount"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/toggle_widget_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Amount"
                        android:checked="true"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/perAge"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="%age"
                        android:textColor="@color/white" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_6"
        android:paddingLeft="@dimen/dimen_2"
        android:paddingRight="@dimen/dimen_2"
        android:orientation="vertical">
        <view.TvRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ventura_color"
            android:text="Scheme Name"
            android:textSize="@dimen/text_13"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2">
            <view.TvRegular
                android:id="@+id/equityTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/ventura_color"
                android:text="Equity"
                android:textSize="@dimen/text_13"/>
            <view.TvRegular
                android:id="@+id/debtTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/ventura_color"
                android:text="Debt"
                android:textSize="@dimen/text_13"/>
            <view.TvRegular
                android:id="@+id/othersTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/ventura_color"
                android:text="Gold/Others"
                android:textSize="@dimen/text_13"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:background="@color/header"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_6"
        android:paddingBottom="@dimen/dimen_6"
        android:paddingLeft="@dimen/dimen_2"
        android:paddingRight="@dimen/dimen_2"
        android:background="@color/header"
        android:orientation="vertical">
        <view.TvRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/Grand_Total"
            android:textStyle="bold"
            android:textSize="@dimen/text_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2">
            <view.TvRegular
                android:id="@+id/totequity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="70"
                android:textStyle="bold"
                android:textSize="@dimen/text_15"/>
            <view.TvRegular
                android:id="@+id/totdebt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="25"
                android:textStyle="bold"
                android:textSize="@dimen/text_15"/>
            <view.TvRegular
                android:id="@+id/totother"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="5"
                android:textSize="@dimen/text_15"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>