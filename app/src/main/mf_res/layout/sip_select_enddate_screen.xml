<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/analytics_background"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="center">
                <TextView
                    android:id="@+id/schemenameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Axis Blue chip fund"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:textColor="@color/ventura_color"
                    android:textSize="@dimen/text_18"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:layout_weight="1"
                    android:src="@drawable/ic_calendar_vw"
                    android:layout_marginLeft="@dimen/dimen_30"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select the no. of months for your investment"
                android:textColor="@color/silver"
                android:layout_marginTop="@dimen/dimen_20"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_36">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10">
                    <TextView
                        android:id="@+id/tv_60m"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60 Months"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold"
                        android:textColor="@drawable/bg_selectortext_one"
                        android:gravity="center"
                        android:paddingTop="@dimen/dimen_6"
                        android:paddingBottom="@dimen/dimen_6"
                        android:background="@drawable/bg_selector_one"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"/>
                    <TextView
                        android:id="@+id/tv_120m"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="120 Months"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold"
                        android:textColor="@drawable/bg_selectortext_one"
                        android:gravity="center"
                        android:paddingTop="@dimen/dimen_6"
                        android:paddingBottom="@dimen/dimen_6"
                        android:background="@drawable/bg_selector_one"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:gravity="center_horizontal">



                    <TextView
                        android:id="@+id/tv_cancelled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_selector_one"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dimen_30"
                        android:paddingTop="@dimen/dimen_6"
                        android:paddingRight="@dimen/dimen_30"
                        android:paddingBottom="@dimen/dimen_6"
                        android:text="Until I Cancel"
                        android:textColor="@drawable/bg_selectortext_one"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/untilcancelled_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:src="@drawable/i_icon"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/monofchoice_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_40">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:text="Months of your choice"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15"/>
                    <include layout="@layout/mf_spinner_whitebg"
                        android:id="@+id/sipDaySpinner"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/dimen_36"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIP End date -"
                    android:textStyle="bold"
                    android:textColor="@color/silver"
                    android:textSize="@dimen/text_18"/>
                <TextView
                    android:id="@+id/tv_enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dd-mmm-yyyy"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_20"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_50">
                <Button
                    android:id="@+id/nextbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_20"
                    android:background="@drawable/bg_orange_btn"
                    android:paddingLeft="@dimen/dimen_30"
                    android:paddingRight="@dimen/dimen_30"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The default SIP period is 30 years, which means the SIP will continue for 30 years until you cancel it."

                android:textColor="@color/ventura_color"
                android:justificationMode="inter_word"
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:textSize="@dimen/text_18"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>