<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/popup_border">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height"
            android:layout_weight="1"
            android:text="Event Style:"
            android:textColor="@color/white"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/common_textsize"/>
        <RadioGroup
            android:id="@+id/event_radiogroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="2">
            <RadioButton
                android:id="@+id/three_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="3 Line"
                android:textSize="@dimen/common_textsize"
                android:layout_marginRight="@dimen/common_margine"
                android:background="@drawable/radiobutton_selector"
                android:textColor="@drawable/radiobutton_checked_textcolor"/>
            <RadioButton
                android:id="@+id/one_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="1 Line"
                android:textSize="@dimen/common_textsize"
                android:background="@drawable/radiobutton_selector"
                android:textColor="@drawable/radiobutton_checked_textcolor"/>
        </RadioGroup>
    </LinearLayout>
