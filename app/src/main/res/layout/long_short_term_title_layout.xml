<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <wealth.FontTextView
            android:id="@+id/txt_comp_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="company name"
            android:layout_weight="0.9"/>
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:id="@+id/img_grid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@mipmap/icon_gridview"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginTop="@dimen/common_margine"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_valution"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="VALUATION"
            android:textColor="@color/white"
            android:textSize="@dimen/small_textsize" />
        <Button
            android:id="@+id/button_viewchart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margine"
            android:layout_marginRight="@dimen/common_margine"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="VIEW CHARTS"
            android:textColor="@color/white"
            android:textSize="@dimen/small_textsize" />

        <Button
            android:id="@+id/button_latestresult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="LATEST RESULTS"
            android:textColor="@color/white"
            android:textSize="@dimen/small_textsize" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/forList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <wealth.TitleHeaderTextView
                    android:id="@+id/txt_purchase_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="PurDate"
                    android:textColor="@color/white" />

                <wealth.TitleHeaderTextView
                    android:id="@+id/txt_purchase_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="PurPrice"
                    android:textColor="@color/white" />

                <wealth.TitleHeaderTextView
                    android:id="@+id/txt_cmp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="CMP"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <wealth.TitleHeaderTextView
                    android:id="@+id/txt_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="Qty"
                    android:textColor="@color/white" />

                <wealth.TitleHeaderTextView
                    android:id="@+id/txt_purchase_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="PurVal"
                    android:textColor="@color/white" />

                <wealth.TitleHeaderTextView
                    android:id="@+id/txt_current_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="CurVal"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <wealth.TitleHeaderTextView
                android:id="@+id/sell_purchase_date"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="SellDate"
                android:visibility="visible"
                android:gravity="end"
                android:textColor="@color/white"/>

            <wealth.TitleHeaderTextView
                android:id="@+id/txt_gainloss"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="end"
                android:layout_marginTop="4dp"
                android:text="Gain/Loss"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color" />
</LinearLayout>
