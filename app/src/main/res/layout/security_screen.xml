<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="@dimen/common_margine"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/left_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Session Duration:     "
                android:textSize="@dimen/common_textsize"
                android:textColor="@color/white"/>

            <include layout="@layout/custom_spinner"
                android:id="@+id/securitysetting_spinner"
                android:layout_width="80dp"
                android:layout_height="@dimen/item_height"
                android:layout_marginRight="@dimen/common_margine"/>
            <TextView
                android:id="@+id/securitysetting_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="@dimen/common_textsize"
                android:textColor="@color/white"/>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: This is for logout of trading after selected duration of inactivity."
        android:layout_marginTop="@dimen/item_height"
        android:textSize="@dimen/common_textsize"
        android:textColor="@color/silver"/>
</LinearLayout>