<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_border">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_margin="@dimen/common_margine">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:gravity="center"
                android:text="Add watch list"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/btn_dialog"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/silver"
            android:layout_marginBottom="@dimen/common_margine"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:id="@+id/userGroupName"
                android:gravity="left|center_vertical"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_margin="6dp"
                android:hint="Enter new Watchlist"
                android:background="@drawable/button_background_round"
                android:singleLine="true"
                android:maxLength="10"
                android:inputType="textCapWords"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                android:textColorHint="@color/silver"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_margin="6dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnAgOk"
            android:text="Ok"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="@drawable/button_background_round"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btnAgCancel"
        android:text="Cancel"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:background="@drawable/button_background_round"/>
</LinearLayout>
</LinearLayout>