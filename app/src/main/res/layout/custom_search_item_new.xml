<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/common_margine">
        <LinearLayout
            android:id="@+id/scripslay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/scripnameitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_6" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/segmentitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:text="Exch"
                    android:textColor="@color/gray_color_light"
                    android:textSize="@dimen/dimen_12" />
                <TextView
                    android:id="@+id/grpnameitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:text=""
                    android:textColor="@color/circle_green"
                    android:textSize="@dimen/dimen_12" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--<ImageButton
                android:id="@+id/add_item"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_20"
                android:background="@color/black"
                android:src="@mipmap/img_plus" />-->
            <TextView
                android:id="@+id/view_item"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_10"
                android:background="@drawable/button_border"
                android:text="View"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/add_item"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginEnd="@dimen/dimen_10"
                android:background="@drawable/button_border"
                android:text="Add"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dimen_10"
                android:paddingEnd="@dimen/dimen_10"
                android:textColor="@color/white"
                 />
        </LinearLayout>
</LinearLayout>