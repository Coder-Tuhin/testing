<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/analytics_background"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10">
    <TextView
        android:id="@+id/tv_schemecode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Axis Bluechip Fund"
        android:textSize="@dimen/text_14"
        android:textColor="@color/ventura_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_orange_2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Returns (%) p.a."
                android:gravity="center"
                android:textSize="@dimen/text_14"
                android:textColor="@color/white"
                android:padding="@dimen/dimen_4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/black">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3 Years"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/ventura_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 Years"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"/>
                </LinearLayout>
                <View
                    android:layout_width="0.8dp"
                    android:layout_height="match_parent"
                    android:background="@color/ventura_color"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_3yrs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="15"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_12" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/ventura_color"/>
                    <TextView
                        android:id="@+id/tv_5yrs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18.5"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:padding="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAV (Rs)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12"/>
                <TextView
                    android:id="@+id/tv_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123.1234"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_14"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUM (Rs)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12"/>
                <TextView
                    android:id="@+id/tv_fundsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123.1234"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_14"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_invest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/mf_button_bg"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_4"
                android:paddingRight="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_4"
                android:text="Invest"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ventura_color"
        android:layout_marginTop="@dimen/dimen_10"
        />
</LinearLayout>