<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/item_height"
    android:background="@color/black">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_height"
                    android:layout_marginRight="@dimen/item_height"
                    android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/equitylink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:orientation="vertical">
                                <TextView
                                    android:id="@+id/nselink_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/common_margine"
                                    android:autoLink="web"
                                    android:gravity="center"
                                    android:text="NATIONAL STOCK EXCHANGE"
                                    android:textSize="@dimen/common_textsize"
                                    android:textColor="@android:color/white"
                                    android:background="@drawable/border" />

                                <TextView
                                    android:id="@+id/bselink_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_margine"
                                    android:padding="@dimen/common_margine"
                                    android:autoLink="web"
                                    android:gravity="center"
                                    android:text="BOMBAY STOCK EXCHANGE"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/common_textsize"
                                    android:background="@drawable/border"/>
