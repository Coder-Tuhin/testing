                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_margine"
                                    android:padding="@dimen/common_margine"
                                    android:autoLink="web"
                                    android:gravity="center"
                                    android:text="DOWNLOAD USER MANUAL"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/common_textsize"
                                    android:background="@drawable/border"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/commoditylink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">
                                <TextView
                                    android:id="@+id/venturalink_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/common_margine"
                                    android:autoLink="web"
                                    android:gravity="center"
                                    android:text="Ventura Securities Ltd."
