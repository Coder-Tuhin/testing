                                    android:id="@+id/pivotncdexlink_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_margine"
                                    android:padding="@dimen/common_margine"
                                    android:autoLink="web"
                                    android:gravity="center"
                                    android:text="Pivot Table  Ncdex"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/common_textsize"
                                    android:background="@drawable/border"/>
                                <TextView
                                    android:id="@+id/dailypointerlink_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/common_margine"
                                    android:padding="@dimen/common_margine"
                                    android:autoLink="web"
                                    android:gravity="center"
                                    android:text="Daily Pointer"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/common_textsize"
                                    android:background="@drawable/border"/>
                        </LinearLayout>
                </LinearLayout>
        </ScrollView>
</LinearLayout>