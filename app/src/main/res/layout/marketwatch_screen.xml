<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="@dimen/common_margine">
    <FrameLayout
        android:id="@+id/depth_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_alignParentTop="true">
        <include layout="@layout/custom_spinner"
            android:id="@+id/watch_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/listgrid_button" />
        <ImageButton
            android:id="@+id/listgrid_button"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height"
            android:src="@mipmap/icon_gridview"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margine"
            android:background="@color/black"
            android:layout_toLeftOf="@+id/event_setting"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/event_setting"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height"
            android:layout_marginLeft="@dimen/dimen_10"
            android:src="@drawable/baseline_settings_24"
            android:background="@color/black"
            android:visibility="visible"
            android:layout_toLeftOf="@+id/searchscript_button"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/searchscript_button"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height"
            android:layout_marginLeft="@dimen/dimen_10"
            android:src="@drawable/baseline_search_24"
            android:background="@color/black"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
    <!--<Spinner
        android:id="@+id/watch_spinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        android:layout_marginTop="@dimen/common_margine"
        android:layout_marginBottom="@dimen/common_margine"
        android:layout_below="@+id/home_tabs"
        android:background="@drawable/spinner_background"
        android:ellipsize="middle"
        android:gravity="start"
        android:spinnerMode="dropdown"
        style="@style/SpinnerStyle"
        android:popupBackground="@color/colorPrimaryDark"
        android:overlapAnchor="false"/>-->

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_margine"
            android:paddingBottom="4dp"
            android:layout_below="@+id/relative_top"
            android:layout_above="@+id/bottomLinear"/>
    <LinearLayout
        android:id="@+id/bottomLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
                android:id="@+id/latestnewslinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:visibility="gone"
                >
            <ImageView
                android:id="@+id/sharebtn"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/help_arrow_right"/>
            <TextView
                android:id="@+id/latestNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:minHeight="@dimen/item_height"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margine"
                android:paddingRight="@dimen/common_margine"
                android:textColor="@color/white"
                android:textSize="@dimen/common_textsize"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/event_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_margine"
            android:paddingRight="44dp"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>