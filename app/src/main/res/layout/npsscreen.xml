<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NPS Dashboard"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_marginTop="@dimen/dimen_30"
                android:gravity="center"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_nps"
                android:layout_margin="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_20"
                android:padding="@dimen/dimen_16"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name :"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/npsname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRAN :"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/npspran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/CopyImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/copyicon"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile No :"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/npsmobileno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Id :"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/npsemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Investment Value (Rs.)"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/npsInvtval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textSize="@dimen/text_45"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_24">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Value (Rs.)"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/white"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/npsCurrVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textSize="@dimen/text_45"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_24">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notional"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gain"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/green1"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loss"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/red"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Rs.)"
                        android:textSize="@dimen/text_16"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/npsNational"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:textSize="@dimen/text_45"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_20">
                <TextView
                    android:id="@+id/pranNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/noteforPran"
                    android:padding="@dimen/dimen_6"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:layout_marginRight="@dimen/dimen_6"
                    android:textSize="@dimen/text_16"
                    android:justificationMode="inter_word"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:id="@+id/submitbtn"
                    android:layout_width="@dimen/dimen_200"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <view.TvLarge
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_40"
                        android:background="@drawable/mf_button_bg"
                        android:gravity="center"
                        android:text="Contribute Now"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/i_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:src="@drawable/i_icon"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>