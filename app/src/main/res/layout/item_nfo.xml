<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/analytics_background"
    android:padding="@dimen/dimen_10">
    <TextView
        android:id="@+id/schemeNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mirae Large Cap"
        android:textColor="@color/ventura_color"
        android:textSize="@dimen/text_14"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Date:"
            android:textColor="@color/report_heading_color"
            android:textSize="@dimen/dimen_12"/>
        <TextView
            android:id="@+id/closedatetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04 Dec"
            android:layout_marginLeft="@dimen/dimen_6"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:id="@+id/onetimeTv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="One Time"
                android:background="@drawable/mf_button_bg_small"
                android:textColor="@color/white"
                android:textSize="@dimen/text_8"
                android:padding="@dimen/dimen_4"
                android:gravity="center"/>
            <Space
                android:layout_width="@dimen/dimen_6"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/sipTv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="SIP"
                android:background="@drawable/mf_button_bg_small"
                android:textColor="@color/white"
                android:textSize="@dimen/text_8"
                android:padding="@dimen/dimen_4"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/child_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/ventura_color"
        android:layout_marginTop="@dimen/dimen_6"/>

</LinearLayout>