<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="@dimen/common_margine">
    <TextView
        android:id="@+id/c_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fg"
        android:textColor="@color/white"
        android:textSize="@dimen/common_textsize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margine"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/e_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="fg"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textsize"/>
        <TextView
            android:id="@+id/m_bid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="fg"
            android:textColor="@color/white"
            android:textSize="@dimen/common_textsize"/>
    </LinearLayout>
    <TextView
        android:id="@+id/p_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fg"
        android:textColor="@color/white"
        android:textSize="@dimen/common_textsize"/>
    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Apply"
        android:background="@drawable/border"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingLeft="@dimen/common_margine"
        android:paddingRight="@dimen/common_margine"
        android:gravity="center"
        android:layout_gravity="right" />
</LinearLayout>