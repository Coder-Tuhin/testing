<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transperent"
    android:paddingBottom="@dimen/bottombar_height">
<!--
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="176px"
        android:src="@drawable/logo_new" />
        -->
    <ImageView
        android:id="@+id/custom_dialog_cross"
        android:padding="@dimen/dimen_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/img_cross"
        app:tint="@color/ventura_color" />
    <LinearLayout
        android:id="@+id/descriptionlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/custom_dialog_title"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Title"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/custom_dialog_msg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="description"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:textColor="#fff"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imagelayout"
        android:layout_width="match_parent"
        android:layout_height="583dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagecustomdialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_10"
            android:src="@drawable/logo_new" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/custom_dialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            android:text="Ok"
            android:textAllCaps="false"
            android:background="@drawable/border_orange"
            android:textSize="18sp"
            android:paddingLeft="@dimen/dimen_20"
            android:paddingRight="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_30"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/custom_dialog_negative"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            android:text="Cancel"
            android:textAllCaps="false"
            android:background="@drawable/border_orange"
            android:textSize="18sp"
            android:paddingLeft="@dimen/dimen_20"
            android:paddingRight="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_30"
            android:textColor="@color/white"
            android:visibility="visible"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>