<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/common_margine"
        android:padding="@dimen/common_margine"
        android:background="@drawable/border"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funded Stocks:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Scrip Name"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/silver" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center_vertical|right"
                android:textColor="@color/silver" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Value"
                android:textSize="13sp"
                android:gravity="center_vertical|right"
                android:textStyle="bold"
                android:textColor="@color/silver" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@drawable/dash_line"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fundRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/common_margine"
        android:padding="@dimen/common_margine"
        android:background="@drawable/border"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collateral Stocks:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Scrip Name"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/silver" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center_vertical|right"
                android:textColor="@color/silver" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Value"
                android:textSize="13sp"
                android:gravity="center_vertical|right"
                android:textStyle="bold"
                android:textColor="@color/silver" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@drawable/dash_line"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/colletralRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>




</LinearLayout>