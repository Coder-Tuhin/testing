<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/handImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/one_finger"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/handText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="@dimen/dimen_220"
        android:text="Long press on any Stock to view \n\t\tits Market Depth and Trade"
        android:textColor="@color/help_textcolor"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btnGot"
            android:layout_width="@dimen/dimen_140"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/button_got"
            android:text=" GOT IT "
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/item_height"
            android:layout_marginBottom="@dimen/dimen_40"
            android:layout_marginRight="@dimen/item_height"/>
    </LinearLayout>




</RelativeLayout>