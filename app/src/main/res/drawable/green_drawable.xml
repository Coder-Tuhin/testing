<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="2050%" android:pivotY="50%" android:fromDegrees="0">
    <shape android:shape="rectangle" android:innerRadiusRatio="3"
        android:thicknessRatio="30" android:useLevel="false">
        <gradient android:type="linear" android:useLevel="false"
            android:startColor="#00ff00"
            android:centerColor="#4400ff00"
            android:endColor="@android:color/transparent"
            android:angle="0"/>
        <corners android:radius="6dp"/>
    </shape>
</rotate>
