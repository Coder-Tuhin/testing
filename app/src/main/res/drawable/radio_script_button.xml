<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:color="#000" android:padding="5dp" android:shape="rectangle">
            <corners android:radius="5dp"></corners>
            <solid android:color="#fff"></solid>
            <stroke android:width="1dp" android:color="#000"></stroke>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:color="#fff" android:padding="5dp" android:shape="rectangle">
            <corners android:radius="5dp"></corners>
            <solid android:color="#000"></solid>
            <stroke android:width="1dp" android:color="#fff"></stroke>
        </shape>
    </item>
</selector>