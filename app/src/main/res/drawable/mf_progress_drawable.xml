<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />

            <gradient
                android:angle="270"
                android:centerColor="#61DEAF"
                android:centerY="0.5"
                android:endColor="#61DEAF"
                android:startColor="#61DEAF" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:endColor="#B5E61D"
                    android:startColor="#B5E61D" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#FA8010"
                    android:startColor="#FA8010" />
            </shape>
        </clip>
    </item>

</layer-list>